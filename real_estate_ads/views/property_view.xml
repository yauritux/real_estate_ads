<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_property_view_offers" model="ir.actions.act_window">
            <field name="name">Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('property_id', '=', active_id)]</field>
        </record>

        <record id="estate_property_search_view" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="state"/>
                    <field name="buyer_id"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <filter string="New" name="new_state" domain="[('state', '=', 'new')]"/>
                    <filter string="Offer Received" name="received_state" domain="[('state', '=', 'received')]"/>
                    <separator/>
                    <filter string="Sold" name="sold_state" domain="[('state', '=', 'sold')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    </group>
                    <searchpanel>
                        <field name="state" icon="fa-filter" groupby="group_by_state" limit="0"/>
                        <field name="type_id" icon="fa-filter" groupby="group_by_type_id" limit="0"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="estate_property_quick_create_form_view" model="ir.ui.view">
            <field name="name">estate.property.quick.create.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="estate_property_pivot_view" model="ir.ui.view">
            <field name="name">estate.property.pivot</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="name" type="row"/>
                    <field name="selling_price" type="measure"/>
                    <field name="expected_price" type="measure"/>
                    <!-- <field name="best_offer" type="measure"/> -->
                    <field name="facades" type="measure"/>
                    <field name="bedrooms" type="measure"/>
                    <field name="state" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="estate_property_graph_view" model="ir.ui.view">
            <field name="name">estate.property.graph</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <graph>
                    <field name="name"/>
                    <field name="selling_price" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="estate_property_calendar_view" model="ir.ui.view">
            <field name="name">estate.property.calendar</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <calendar date_start="date_availability" string="Properties" mode="month" event_open_popup="true" form_view_id="real_estate_ads.estate_property_form_view" create="true">
                    <field name="name"/>
                    <field name="date_availability"/>
                    <field name="postcode"/>
                </calendar>
            </field>
        </record>

        <record id="estate_property_kanban_view" model="ir.ui.view">
            <field name="name">estate.property.kanban</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" on_create="quick_create" quick_create_view="real_estate_ads.estate_property_quick_create_form_view">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="postcode"/>
                    <field name="buyer_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section">
                                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="offer_count"/> Offer(s)
                                        </div>  
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="best_offer"/>
                    <field name="selling_price"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_sold" type="object" string="Sold" class="btn btn-primary" />
                        <button name="action_cancel" type="object" string="Cancel" class="btn btn-danger" />
                        <button name="action_send_email" type="object" string="Send Email" class="btn btn-secondary" track="True"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,received,accepted,sold,canceled"/>                        
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="%(real_estate_ads.action_property_view_offers)d" type="action" icon="fa-handshake-o">
                                <field name="offer_count" string="Offers" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" name="action_client_refresh" type="object" icon="fa-refresh">
                                <field name="offer_count" string="Refresh" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" name="action_client_notify" type="object" icon="fa-bell-o">
                                <field name="offer_count" string="Notify" widget="statinfo"/>
                            </button>
                            <!-- <button class="oe_stat_button" name="website_publish_button" type="object" icon="fa-globe">
                                <field name="is_published" widget="website_publish_button"/>
                            </button> -->
                            <button class="oe_stat_button" name="action_url_action" type="object" icon="fa-info-circle">
                                Info
                            </button>
                        </div>
                        <group>
                            <h1>
                                <field name="name" widget="char_emojis" placeholder="Property Name..." />
                            </h1>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
                            <group>
                                <field name="type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price" groups="real_estate_ads.group_property_manager" widget="monetary"/>
                                <field name="best_offer" widget="monetary"/>
                                <field name="selling_price" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage" widget="boolean_toggle"/>
                                    <field name="garden" widget="boolean_toggle"/>
                                    <field name="garden_area" invisible="garden == False"/>
                                    <field name="garden_orientation" invisible="garden == False" widget="selection_badge" />
                                    <field name="total_area"/>
                                    <!-- <field name="alias_id"/> -->
                                </group>
                            </page>
                            <page string="offers">
                                <field name="offer_ids">
                                    <tree editable="bottom" decoration-success="status == 'accepted'" decoration-danger="status == 'rejected'" default_order="creation_date, id">
                                        <field name="price" optional="show" widget="monetary"/>
                                        <field name="currency_id" optional="hide"/>
                                        <field name="partner_id" />
                                        <field name="creation_date" />
                                        <field name="validity" optional="show" column_invisible="True"/>
                                        <field name="deadline" widget="remaining_days" />
                                        <!-- <field name="status" nolabel="1"/> -->
                                        <field name="status" readonly="1"/>
                                        <button name="action_accept_offer" type="object" icon="fa-check" string="Accept"/>
                                        <button name="action_decline_offer" type="object" icon="fa-times" string="Decline"/>
                                    </tree>                                    
                                </field>
                            </page>
                            <page string="Other Info">
                                <group>
                                    <field name="sales_id" widget="many2one_avatar_user" />
                                    <!-- <field name="campaign_id"/>
                                    <field name="source_id"/>
                                    <field name="medium_id"/> -->
                                    <field name="buyer_id" widget="many2one_avatar_user" />
                                    <field name="phone" widget="phone" />
                                    <field name="mobile" widget="phone" />
                                    <field name="email" widget="email"/>
                                    <!-- <field name="website_url"/> -->
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,kanban,pivot,graph,calendar,form</field>
            <field name="view_id" ref="estate_property_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property to Advertise
                </p>
            </field>
        </record>

        <record id="action_custom_client_action" model="ir.actions.client">
            <field name="name">Custom Client Action</field>
            <field name="tag">custom_client_action</field>
        </record>

        <record id="action_extend_offer_deadline" model="ir.actions.server">
            <field name="name">Extend Deadline</field>
            <field name="model_id" ref="real_estate_ads.model_estate_property_offer"/>            
            <field name="state">code</field>
            <field name="binding_model_id" ref="real_estate_ads.model_estate_property_offer"/>
            <field name="binding_view_types">list,form</field>
            <field name="code">
                action = model.extend_offer_deadline()
            </field>
        </record>

        <record id="ir_cron_extend_offer_deadline" model="ir.cron">
            <field name="name">Offers: Extend Deadline Everyday</field>
            <field name="model_id" ref="real_estate_ads.model_estate_property_offer"/>
            <field name="state">code</field>
            <field name="code">model._extend_offer_deadline()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>
    </data>
</odoo>